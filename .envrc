if (which X >/dev/null); then
    export EDITOR="emacsclient -t"
    export VISUAL="emacsclient -c"
else if (which emacs >/dev/null); then
    export EDITOR="emacs -nw"
    export VISUAL="emacs"
else
    export EDITOR="vim"
    export VISUAL="vim"
fi
fi

if (which most >/dev/null); then
   export PAGER=most
fi

export GIT_EDITOR=$EDITOR

if [ -d $HOME/Code/Go/go ]; then
    # GO variables
    export GOROOT=$HOME/Code/Go/go
    export GOPATH=$HOME/Code/Go
    GOBIN=$GOROOT/bin
    export PATH=$GOBIN:$PATH
fi

if [ -d $HOME/.cabal ]; then
    # Haskell cabal support
    export PATH=$HOME/.cabal/bin:$PATH
fi

if [ -d /usr/share/java/apache-ant/ ]; then
    # Apache ant tools
    export PATH=/usr/share/java/apache-ant/bin:$PATH
fi

if [ -d /opt/android-sdk/platform-tools/ ]; then
    # Android dev tools
    export PATH=/opt/android-sdk/platform-tools/:$PATH
fi

if [ -d $HOME/.bin ]; then
   export PATH=$HOME/.bin:$PATH
fi

if [ -d $HOME/.heroku ]; then
   export PATH=$HOME/.heroku:$PATH
fi

if [ -d $HOME/.gem/ruby/1.9.1/bin ]; then
   export PATH=$HOME/.gem/ruby/1.9.1/bin:$PATH
fi

export PATH=.:$PATH