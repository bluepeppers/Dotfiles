# Arch linux specific alias'

# File shortcuts
alias mirrorlist="sudo $EDITOR /etc/pacman.d/mirrorlist"
alias rc.conf="sudo $EDITOR /etc/rc.conf"
alias powerpill.conf="sudo $EDITOR /etc/powerpill.conf"
alias mkinitcpio.conf="sudo $EDITOR /etc/mkinitcpio.conf"
alias rc.local="sudo $EDITOR /etc/rc.local"
alias modprobe.conf="sudo $EDITOR /etc/modprobe.d/modprobe.conf"

#Aura
alias aura="sudo aura"
alias p="sudo aura"
alias pi="sudo aura -S"
alias ps="sudo aura -Ss"
alias pr="sudo aura -R"
alias pil="sudo aura -U"
alias pli="sudo aura -Ql"
alias psi="sudo aura -Qs"
alias pinfo="sudo aura -Si"
alias yi="sudo aura -AS"
alias ys="sudo aura -ASs"

# Startup scripts
alias rc.d='sudo rc.d'
